<!DOCTYPE html>
<html lang="en">
<!--HEAD-->
<%- include('./partials/head.ejs')  %> 
    <title>Iniciar sesión</title>
    <!--HOJA DE ESTILO-->
    <link href="/css/styles.css" rel="stylesheet">`
    <link href="/css/login.css" rel="stylesheet">`
</head>
<!--BODY-->
<body>
    <!--HEADER-->
    <%- include('./partials/header.ejs')  %> 
    <!--MAIN -->
    <main class="register">
      
        <form action="/user/login" method="POST" class="form-register" id="form-register">
            <h1 class="login">INICIAR SESION</h1>
            <div class="div-form-login">
                <!-- USUARIO -->
                <div class="group-register" id="login1">
                        <input required type="text" class="input-text" id="usuario"  name ="email"><span class="barra"></span>
                        <label for="usuario" class="lbl-text">Correo electronico</label>
                          
                </div>

                <!-- CONTRASENA -->
                <div class="group-register" id="login2">
                        <input required type="password" class="input-text" id="contraseña" name="contrasenia"><span class="barra"></span>
                        <label for="contraseña" class="lbl-text">Contraseña</label>
                </div>

                <button type="submit" class="corrido"><a href="/">Inicar Sesion</a></button>
                <p class="login"><a href="/user/registro">¿No estas registrado? Crea tu cuenta acá!</a></p>
                </div>
            </div>
        </form>
        <div class="error">
            <% if(locals.errors &&errors.email ) {%>
              
                <h1>¡¡¡¡¡¡¡¡¡¡¡¡<%= errors.email.msg %>!!!!!!!!!!!!</h1> 
              
         <% } %>
         <% if(locals.errors &&errors.password ) {%>
              
            <h1>¡¡¡¡¡¡¡¡¡¡¡¡<%= errors.password.msg %>!!!!!!!!!!!!</h1> 
          
     <% } %>
        </div>
    </main>
<!-- SUSCRIPCION + FOOTER + COPIRIGHT-->
