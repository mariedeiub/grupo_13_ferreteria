<!DOCTYPE html>
<html lang="en">
<!--HEAD-->
<%- include('./partials/head.ejs')  %> 
    <title>Iniciar sesión</title>
    <!--HOJA DE ESTILO-->
    <link href="/css/styles.css" rel="stylesheet">`
    <link href="/css/login.css" rel="stylesheet">`
</head>
<!--BODY-->
<body>
    <!--HEADER-->
    <%- include('./partials/header.ejs')  %> 
    <!--MAIN -->
    <main class="register">
      
        <form action="/user/home" method="POST" class="form-register" id="form-register">
            <h1 class="login">INICIAR SESION</h1>
            <div class="div-form-login">
                <!-- USUARIO -->
                <div class="group-register" id="login1">
                        <input required type="text" class="input-text" id="usuario"  name ="email"><span class="barra"></span>
                        <label for="usuario" class="lbl-text">Correo electronico</label>
                        <!--<% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>-->
                </div>

                <!-- CONTRASENA -->
                <div class="group-register" id="login2">
                        <input required type="password" class="input-text" id="contraseña" name="contraseña"><span class="barra"></span>
                        <label for="contraseña" class="lbl-text">Contraseña</label>
                </div>

                <button type="submit" class="corrido">Iniciar Sesion</button>
                <p class="login"><a href="/user/registro">¿No estas registrado? Crea tu cuenta acá!</a></p>
                </div>
            </div>
                <div >
                    <label >
                        <input type="checkbox"  name="remember_user">Recordar mi usuario
                    </label>
                </div>
        </form>
        <div class="error">
            <% if(locals.errors &&errors.email ) {%>
              
                <p>¡¡¡¡<%= errors.email.msg %>!!!!</p> 
              
            <% } %>
            <% if(locals.errors &&errors.password ) {%>
              
             <p>¡¡¡¡<%= errors.password.msg %>!!!!</p> 
          
            <% } %>
        </div>
    </main>
