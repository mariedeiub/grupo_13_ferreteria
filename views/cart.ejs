<!DOCTYPE html>
<html lang="en">
<!--HEAD-->

<%- include('./partials/head.ejs')  %> 
      <!--HOJA DE ESTILO-->
      <title>Carrito de compras</title>
      <link href="/css/styles.css" rel="stylesheet">`
      <link href="/css/cart.css" rel="stylesheet">`
</head>
<!--BODY-->
<body>
    <!--HEADER-->
    <%- include('./partials/header.ejs')  %> 
    <!--MAIN -->
    <main>
        <!-- LISTADO DE PRODUCTOS -->
        <section class="lista-productos">
            <ul>
                <li class="detalle-lista-producto">
                    <section class="imagen">
                        <a href="/detail"><img src="/images/producto1.png" alt=""></a>
                    </section>
                    <section class="detalle">
                        <h4>Cortador de ceramicos Zonta 64cm</h4>
                        <p class="precio">$ 61.200</p>
                        <p class="descuento">20%</p>
                        <!--CONTADOR-->
                        <div class="counter">
                            <span class="down" onClick='decreaseCount(event, this)'>-</span>
                            <input type="text" value="1">
                            <span class="up" onClick='increaseCount(event, this)'>+</span>
                        </div>
                    </section>
                    <section class="editar">
                        <i class="fas fa-pencil-alt"></i>
                        <i class="fa-regular fa-trash-can"></i>
                        <h4>$ 48.960</h4>
                    </section>
                </li>
                <li class="detalle-lista-producto">
                    <section class="imagen">
                        <a href="/detail"><img src="/images/pintura-alba.png" alt=""></a>
                    </section>
                    <section class="detalle">
                        <h4>Pintura Alba 20ls</h4>
                        <p class="precio">$ 19.589</p>
                        <p class="descuento">10%</p>
                        <!--CONTADOR-->
                        <div class="counter">
                            <span class="down" onClick='decreaseCount(event, this)'>-</span>
                            <input type="text" value="1">
                            <span class="up" onClick='increaseCount(event, this)'>+</span>
                        </div>
                    </section>
                    <section class="editar">
                        <i class="fas fa-pencil-alt"></i>
                        <i class="fa-regular fa-trash-can"></i>
                        <h4>$ 17.630</h4>
                    </section>
                </li>
            </ul>
        </section>
        <!-- DETALLE COMPRA -->
        <div class="detalle-compra">
            <!-- CODIGO PROMO -->
            <section class="detalle-promo">
                    <label for="codigo"><h4>Codigo Promo: </h4></label>
                    <input type="text" class="codigo">
                    <button>OK</button>
            </section>
            <!--DETALLE TOTAL DEL ENVIO -->
            <section class="detalle-envio">
                    <label for="codigo"><h4>Codigo Postal: </h4></label>
                    <input type="text" class="codigo-postal">
                    <button>Calcular</button>
            </section>
            <!--DETALLE TOTAL DE LA COMPRA-->
            <section class="total-compra">
                    <h3>Resumen de compra</h3>
                    <p>Subtotal productos: </p>
                    <p>Costo de envio: </p>
                    <P>Descuento codigo promo: </P>
                    <h5>TOTAL:</h5>
                    <button>Continuar comprando</button>
                    <button>Confirmar compra</button>
            </section>
        </div>
    </main>
<!-- SUSCRIPCION + FOOTER + COPIRIGHT-->
<%- include('./partials/footer.ejs')  %>
