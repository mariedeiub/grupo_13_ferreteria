<!DOCTYPE html>
<html lang="en">
<!--HEAD-->
<%- include('./partials/head.ejs')  %> 

    <title>Registro</title>
    <!--HOJA DE ESTILO-->
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/form.css" rel="stylesheet">
</head>
<body>
    <!--HEADER-->
    <%- include('./partials/header.ejs')  %> 
    <!--MAIN -->
    <main class="register">
        <form action="#" method="POST" class="form-register" id="form-register">
            <div class="div-form-register">
                <h1>REGISTRO</h1>
                <!-- NOMBRE Y APELLIDO -->
                <div class="group-register">
                    <div class="error-input" id="group-name">
                        <input required type="text" class="input-text" id="name"><span class="barra"></span>
                        <label for="name" class="lbl-text">Nombre y Apellido</label>
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <p class="form-error">Debe ingresar el nombre y apellido completo.</p>
                </div>

                <!-- DIRECCION -->
                <div class="group-register">
                    <input required type="text" class="input-text" id="address"><span class="barra"></span>
                    <label for="address" class="lbl-text">Direccion</label>
                </div>
                <div class="group-register">
                    <input required type="text" class="input-text" id="address-l"><span class="barra"></span>
                    <label for="address-l" class="lbl-text">Localidad</label>
                </div>
                <div class="group-register">
                    <input required type="text" class="input-text" id="address-2"><span class="barra"></span>
                    <label for="address" class="lbl-text">Pais</label>
                </div>

                <!-- EDAD -->
                <div class="group-register">
                    <div class="error-input" id="group-date">
                        <input required type="number" class="input-text" id="date"><span class="barra"></span>
                        <label for="date" class="lbl-text">Edad</label>
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <p class="form-error">Debe ser mayor de 18 años para registarse.</p>
                </div>

                <!-- CORREO ELECTRONICO -->
                <div class="group-register">
                    <div class="error-input" id="group-email">
                        <input required type="email" class="input-text" id="mail"><span class="barra"></span>
                        <label for="mail" class="lbl-text">Correo Electronico</label>
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <p class="form-error">Debe ingresar un mail valido.</p>
                </div>

                <!-- USUARIO -->
                <div class="group-register">
                    <div class="error-input" id="group-username">
                        <input required type="text" class="input-text" id="username"><span class="barra"></span>
                        <label for="username" class="lbl-text">Nombre de Usuario</label>
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <p class="form-error">El nombre de usuario debe tener entre 5 y 15 digitos. Soloe letras y numeros.</p>
                </div>

                <!-- CONTRASENA -->
                <div class="group-register">
                    <div class="error-input" id="group-password">
                        <input required type="password" class="input-text" id="password" name="password"><span class="barra"></span>
                        <label for="password" class="lbl-text">Contraseña</label>
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <p class="form-error">La contraseña debe tener entre 5 y 15 digitos. Solo letras y numeros.</p>
                </div>

                <!-- CONFIRMAR CONTRASENA -->
                <div class="group-register">
                    <div class="error-input" id="group-password2">
                        <input required type="password" class="input-text" id="password2" name="password2"><span class="barra"></span>
                        <label for="password" class="lbl-text">Repetir Contraseña</label>
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <p class="form-error">Las contraseñas deben ser iguales.</p>
                </div>

                <button type="submit"><a href="/">Registrarse</a></button>
                <p class="login"><a href="/login">¿Ya estás registrado? Inicia seción acá!</a></p>
            </div>
        </form>
    </main>
<!-- SUSCRIPCION + FOOTER + COPIRIGHT-->
<%- include('./partials/footer.ejs')  %>